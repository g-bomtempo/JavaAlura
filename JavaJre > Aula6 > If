
public class TestaCondicional {
	
	public static void main (String [] args) {
		
		int idade = 16;
		int quantidadePessoas = 1;
		
		System.out.println("Bem vindo ao verificador de idade");
		if (idade >= 18) {
			System.out.println("Maior de idade pode entrar");
		} else {
			if (quantidadePessoas >= 2) {
				System.out.println("Como vocÊ está acompanhado, pode entrar");
			} else {
			System.out.println("Menor de idade não entra");
			}
		}
	}

}
